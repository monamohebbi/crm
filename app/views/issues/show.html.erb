<div class="container">
  <div class="page-header">
    <h1>Issue #<%= @issue.id %></h1>
  </div>
  <table class="table table-striped table-bordered">
    <thead>
      <tr>
        <th>Customer ID</th>
        <th>Customer Name</th>
        <th>Issue title</th>
        <th>Received by</th>
        <th>Assigned to</th>
        <th>Date</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><%=@issue.id%></td>
        <td><%=@issue.customer_name%></td>
        <td><%=@issue.issue_title%></td>
        <td><%=@issue.received_by%></td>
        <td><%=@issue.assigned_to%></td>
        <td><%=@issue.assigned_date%></td>
        <td><%= link_to "Edit", edit_issue_path(@issue.id) %>, Close</td>
      </tr>
    </tbody>
  </table>

  <div class="page-header">
    <h1>Actions</h1>
  </div>
  
  <table class="table table-striped table-bordered">
    <thead>
      <tr>
        <th>Action title</th>
        <th>Performed by</th>
        <th>Date performed</th>
        <th>Details</th>
        <th>Actions</th>
      </tr>
    </thead> 
    <tbody>
      <% @actions.each do |action| %>
        <tr>
          <td><%= action.action_title %></td>
          <td><%= action.name %></td>
          <td><%= action.date %></td>
          <td><%= action.text %></td>
          <td><%= link_to "Edit", edit_issue_action_path(action.issue_id, action.id), :class => "btn btn-primary" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= form_for @action, :url => issue_actions_path(:issue_id => @issue.id), :html => { :class => "form-horizontal" }  do |f| %>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-5">
        <h2>New Action</h2>
      </div>
    </div>
    <div class="form-group">
      <label for="new_action_action_title" class="col-sm-2 control-label">Action Title</label>
      <div class="col-sm-5">
        <%= text_field_tag "new_action[action_title]", nil, :class => "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <label for="new_action_name" class="col-sm-2 control-label">Completed By</label>
      <div class="col-sm-5">
        <%= text_field_tag "new_action[name]", nil, :class => "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <label for="new_action_date" class="col-sm-2 control-label">Completed By</label>
      <div class="col-sm-5">
        <%= text_field_tag "new_action[date]", nil, :class => "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <label for="new_action_text" class="col-sm-2 control-label">Details</label>
      <div class="col-sm-5">
        <%= text_area_tag "new_action[text]", nil, :class => "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-5">
        <%= f.submit :class => "btn btn-success" %>
      </div>
    </div>
  <% end %>
</div>