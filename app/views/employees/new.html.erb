<div class="container">
  <div class="page-header">
    <h1>New Employee</h1>
  </div>

  <%= form_for @employee, :html => { :class => "form-horizontal" } do |f| %>
    <div class="form-group">
      <label for="employee_customer_name" class="col-sm-2 control-label">Employee Name</label>
      <div class="col-sm-5">
        <%= f.text_field :name,  :class => "form-control" %>
      </div> 
    </div>
    <div class="form-group">
      <label for="employee_customer_care" class="col-sm-2 control-label">Customer Care?</label>
      <div class="col-sm-5">
        <%= f.check_box  :customer_care %>
      </div>
    </div>
    <div class="form-group">
      <label for="employee_software_technician" class="col-sm-2 control-label">Software Technician?</label>
      <div class="col-sm-5">
        <%= f.check_box  :software_technician %>
      </div>
    </div>
    <div class="form-group">
      <label for="employee_management" class="col-sm-2 control-label">Management?</label>
      <div class="col-sm-5">
        <%= f.check_box  :management %>
      </div>
    </div>
    
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-5">
        <%= f.submit :class => "btn btn-success" %>
      </div>
    </div>
  <% end %>
</div>